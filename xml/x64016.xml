ly="false" hidden="false" required="false" QuerySchemas="" QueryLocationRoots="" Title="" Values="" LinkSet=""/><FullText type="boolean" label="Check for text body to use the full width of the page." readonly="false" hidden="false" required="false">true</FullText><TopText type="boolean" label="Check to put text body above Highlighted News" readonly="false" hidden="false" required="false">true</TopText><BodyCopy type="dhtml" label="Optional Content" readonly="false" hidden="false" required="false" Height=""><![CDATA[<h2><span style="color: #297cb9;">The Scholarship of Learning &amp; Teaching</span></h2>
<p><span style="color: #000000; font-size: medium;">Welcome to the home of faculty activities, resources and articles around the scholarship of learning and teaching.</span></p>
<h2><a href="x23090.xml">Faculty Committees</a></h2>
<p><span style="color: #000000; font-size: medium;">Over forty faculty members participate in seven faculty committees that publish articles, sponsor training, fund research, and organize academic conferences around the scholarship of learning and teaching.&nbsp; Faculty from each college are represented on all committees and work under the direction of the Learning &amp; Teaching Council.</span></p>
<h2><a href="x30345.xml">Instructional Tools</a></h2>
<p><span style="color: #000000; font-size: medium;">A compellation of "best practices" are available in a series of simple two-page summareis that are:</span><span style="color: #000000; font-size: medium;"> </span></p>
<ul style="color: black;">
<li>Practitioner-based</li>
<li>Jargon free</li>
<li>Concise</li>
<li>Available on Demand</li>
</ul>
<p><span style="color: #000000; font-size: medium;">Over fifty faculty members have helped develop these tools.&nbsp; Please contribute your comments and suggestions.</span></p>
<h2><a href="x32265.xml">Articles &amp; Videos</a></h2>
<p><span style="color: #000000; font-size: medium;">Learn what your colleagues at BYU-Idaho are experiencing in their efforts to improve the quality of instruction.&nbsp; New stories are regularly posted to highlight practices and conversations about education efforts on our campus.</span></p>]]></BodyCopy></xPower><xPower Type="GroupStart" Name="FaceBook" label="Facebook Integration" readonly="false" hidden="false" required="false" Expanded="true" GroupStart=""><fbookStatus type="string" label="Facebook ID#" readonly="false" hidden="false" required="false"/><fbookDisplayed type="string" label="Number of facebook messages to display" readonly="false" hidden="false" required="false">0</fbookDisplayed></xPower><BannerAd type="multiselect" label="Rotating Ads" readonly="false" hidden="false" required="false" MaxChoices="" PageSize="" Query_PageType="BannerAdComponent" Query_LocationRoot="x6922" Query_SelectedFields="@Name|@ID" AdditionalFilter_XPathQuery="">Sample Ad-x6923</BannerAd><xPower Type="GroupStart" Name="QuickLinksGroup" label="Quick Links Group" readonly="false" hidden="false" required="false" Expanded="true" GroupStart=""><xPower Type="Component" Name="QuickLinks1" label="Column 1" readonly="false" hidden="false" required="false" Component="" CompTypes="QuickLinksComponent"/><xPower Type="Component" Name="QuickLinks2" label="Column 2" readonly="false" hidden="false" required="false" Component="" CompTypes="QuickLinksComponent"/><xPower Type="Component" Name="QuickLinks3" label="Column 3" readonly="false" hidden="false" required="false" Component="" CompTypes="QuickLinksComponent"/></xPower><xPower Type="Component" Name="HighlightedLinks" label="Highlighted Links" readonly="false" hidden="false" required="false" Component="x35813" CompTypes="HighlightedLinksComponent" Expanded="false"/><xPower Type="Navigation" Name="DeptEvents" label="Define Your Events Folder" readonly="false" hidden="false" required="false" Expanded="true" Navigation="Children" Generation