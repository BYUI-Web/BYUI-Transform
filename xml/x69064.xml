&lt;script&gt;
$(document).ready(function(){
var a1 = "aboutArrow";
var a2 = "eligibilityArrow";
var a3 = "compareArrow";
var a4 = "contractArrow";
var a5 = "contactArrow";
  $("#aboutHeader").click(function(){
    $("#about").slideToggle("slow");
    $rotatePicture(a1);
  });
  $("#eligibilityHeader").click(function(){
    $("#eligibility").slideToggle("slow");
    $rotatePicture(a2);
  });
  $("#compareHeader").click(function(){
    $("#compare").slideToggle("slow");
    $rotatePicture(a3);
  });
  $("#contractHeader").click(function(){
    $("#contract").slideToggle("slow");
    $rotatePicture(a4);
  });
  $("#contactHeader").click(function(){
    $("#contact").slideToggle("slow");
    $rotatePicture(a5);
  });
  $rotatePicture = function(data){
  	$( '#' + data ).toggleClass( "rotated" );
  }
});
&lt;/script&gt;

